syntax on

set encoding=utf-8
set fileformats=unix
set fileencodings=utf-8,gb2312,gbk,gb18030

set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4

filetype plugin indent on
au FileType html,javascript,less,css setl et ts=2 sw=2 sts=2

set nu
set autoindent
set ambiwidth=double
set foldmethod=indent


set hlsearch
set incsearch
set ignorecase

nnoremap <C-l> gt
nnoremap <C-h> gT
